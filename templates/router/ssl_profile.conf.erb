ssl-profile {
    name: <%= @title %>
    cert-db: <%= @ca %>
    cert-file: <%= @cert %>
    key-file: <%= @key %>
<% unless [nil, :undefined, :undef, ''].include?(@password) -%>
    password: <%= @password %>
<% end -%>
<% unless [nil, :undefined, :undef, ''].include?(@ciphers) -%>
    ciphers: <%= @ciphers %>
<% end -%>
<% unless [nil, :undefined, :undef, ''].include?(@protocols) -%>
    protocols: <%= @protocols.join(" ") %>
<% end -%>
}

